{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "name": "Customer",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "address": {
      "type": "text"
    },
    "contact_no": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "gst_no": {
      "type": "string"
    },
    "services": {
      "collection": "service",
      "via": "customer"
    },
    "deliveries": {
      "collection": "delivery",
      "via": "customer"
    },
    "deposit_cylinders": {
      "type": "integer",
      "default": 0
    },
    "payments": {
      "via": "customer",
      "collection": "payment"
    },
    "deposit_amount": {
      "type": "decimal",
      "default": 0
    },
    "deposit_paid": {
      "type": "enumeration",
      "enum": [
        "yes",
        "no"
      ],
      "default": "no"
    }
  }
}
