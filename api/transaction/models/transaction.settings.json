    },
    "customer": {
      "via": "transactions",
      "model": "customer"
    },
    "mode_of_payment": {
      "type": "enumeration",
      "enum": [
        "cash",
        "upi",
        "met_banking",
        "cheque"
      ],
      "default": "cash"
    }
  }
}
