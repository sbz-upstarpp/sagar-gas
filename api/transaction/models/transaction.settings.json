{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "name": "Transaction",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "payment_date": {
      "type": "date"
    },
    "amount": {
