{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "name": "billing",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "date": {
      "type": "datetime"
    },
    "customer": {
      "via": "payments",
      "model": "customer"
    },
    "amount_received": {
      "type": "decimal"
    },
    "amount_due": {
      "type": "decimal"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "paid",
        "partially_paid",
        "not_paid"
      ]
    },
    "service": {
      "via": "payment",
      "model": "service"
    },
    "delivery": {
      "model": "delivery",
      "via": "payment"
    },
    "bill_amount": {
      "type": "decimal"
    },
    "bill_for": {
      "type": "enumeration",
      "enum": [
        "deposit",
        "service",
        "delivery"
      ]
    }
  }
}
